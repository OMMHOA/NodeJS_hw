<div class="container main">
    <div class="row main-content">
        <!-- rightlane -->
        <div class="col-sm-12 col-md-2 col-md-push-10">
            <% if (isLoggedIn) {%>
                <%- include('profile') %>
            <% } else { %>
                <%- include('login') %>
            <% } %>
            <div class="row filters">
                <h3>Szűrők</h3>
                <ul class="list-unstyled">
                    <div>
                        <li>
                            <input type="checkbox" name="lendable" id="len" />
                            <label for="len">Kölcsönbe vehető</label>
                        </li>
                        <li>
                            <input type="checkbox" name="mycity" id="myc" />
                            <label for="myc">Városomban</label>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
        <!-- /rightlane -->
        <!-- middlelane -->
        <div class="col-sm-12 col-md-10 col-md-pull-2">
            <!-- searchbar -->
            <div class="row">
                <form>
                    <div class="col-sm-10">
                        <input type="text" placeholder="keresés.." class="form-control" autofocus />
                    </div>
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-danger">Keresés</button>
                    </div>
                </form>
            </div>
            <!-- /searchbar -->
            <br>
            <!-- books -->
            <% for(var i=0; i<books.length; i++) {%>
                <% if (i % 3 === 0) {%>
                    <div class="row">
                <% } %>
                <div class="col-xs-12 col-md-4">
                    <div class="row">
                        <a href="/book/<%= books[i]._id %>">
                            <div class="col-xs-12 col-md-6">
                                    <div class="book">
                                        <img class="img-responsive" src="<%= books[i].image %>">
                                    </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <h5><%= books[i].title %></h6>
                                <h6><%= books[i].writer %></h6>
                                <h6>Kölcsönözve: <%= books[i].timesLent %><h6>
                            </div>
                        </a>
                    </div>
                </div>
                <% if (i % 3 === 2) {%>
                    </div>
                <% } %>
            <% } %> 
            <!-- /books -->
        </div>
        <!-- /middlelane-->
    </div>
</div>
<!-- end: content -->
