<%- include('header') %>
<div class="container">
    <div class="row">
        <ul class="breadcrumb">
            <li><a href="/home">Főoldal</a></li>
            <li><%= book.title %></li>
        </ul>
    </div>
</div>
<div class="container">
    <div class="row">
        <h2><%= book.title %></h2>
        <h3><%= book.writer %></h3>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-5">
            <img src="http://placehold.it/300x300">
        </div>
        <div class="col-xs-12 col-md-7">
            <p><b>Állapot:</b>
                <% if (book.state == 0) { %>
                    kiváló,
                <% } else if (book.state == 1) { %>
                    nagyon jó,
                <% } else if (book.state == 2) { %>
                    jó,
                <% } else if (book.state == 3) { %>
                    kicsit megviselt,
                <% } else { %>
                    nemtom,
                <% } %>
                <% if (book.location == 0) { %>
                    tulajdonosnál
                <% } else if (book.location == 1) { %>
                    úton
                <% } else if (book.location == 2) { %>
                    kölcsönzőnél
                <% } else if (book.location == 3) { %>
                    eltűnt
                <% } else { %>
                    nemtom
                <% } %>
            </p>
            <hr>
            <% if (isLoggedIn) {%>
                <% if (book.user_id === user._id || user.isAdmin) %>
                <a href="/book/edit/<%= book.id %>"><button class="btn btn-danger">Szerkesztés</button></a>
            <% } %>
        </div>
    </div>
</div>
